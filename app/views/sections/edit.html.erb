<div class="col-12">
  <% if flash[:notice].present? %>
    <div class="col-12">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><%= flash[:notice] %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  <% end %>
  
  <%= form_for @section, html: {class: 'form-inline'} do |f| %>
    <div class="form-group mx-sm-3 mb-2">
      <%= f.text_field :nama_bidang, class: 'form-control', placeholder: 'Nama bidang' %>
    </div>
    <%= f.submit 'Update', class: 'btn btn-primary mb-2' %>
  <% end %>

  <div class="col-12">
    <hr>
  </div>

  <div class="col-12">
    <%= link_to 'Kembali', sections_path, class: 'btn btn-secondary' %>
  </div>

</div>
